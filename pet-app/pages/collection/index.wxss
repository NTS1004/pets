.scroll {
  height: 100vh;
  position: relative;
}

.scroll-list {
  background: #f5f5f5;
}

.pet-list {
  display: flex;
  margin: 0 10rpx;
  flex-wrap: wrap;
}

.pet-item {
  flex: 1;
  background: #fff;
  border-radius: 16rpx;
  display: flex;
  flex-flow: column;
  align-items: center;
  min-width: 47%;
  margin-bottom: 12rpx;
}

.pet-image {
  border-radius: 8rpx;
}

.pet-name {
  font-size: 28rpx;
  margin: 16rpx 0 20rpx 0;
}

.pet-left {
  margin-right: 6rpx;
}

.pet-right {
  margin-left: 6rpx;
}

.empty {
  display: flex;
  flex-flow: column;
  align-items: center;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.text {
  margin-top: 36rpx;
  font-size: 30rpx;
  color: #999;
}