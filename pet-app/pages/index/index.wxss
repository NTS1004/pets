.scroll {
  height: 100vh;
}

.swiper {
  height: 480rpx;
}

.swiper .swiper-item {
  width: 100%;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
}

.cate {
  display: flex;
  justify-content: space-around;
  margin-top: 30rpx;
}

.cate-item {
  display: flex;
  flex-flow: column;
  align-items: center;
  font-size: 28rpx;
}

.cate-name {
  /* color: #fac3b6; */
}

.cate-image {
  width: 72rpx;
  height: 72rpx;
  margin-bottom: 12rpx;
}

.title {
  margin: 26rpx 0 0 20rpx;
  font-size: 34rpx;
  color: #fac3b6;
  font-weight: bold;
  margin-bottom: 28rpx;
}

.recommend {
  display: flex;
  flex-flow: column;
}

.recommend-item {
  flex: 1;
  margin: 0 20rpx;
  margin-bottom: 14rpx;
}

.recommend-image {
  width: 100%;
  border-radius: 12rpx;
}