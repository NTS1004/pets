.containers {
  width: 100%;
  display: flex;
  height: 100vh;
  background: #f5f5f5;
  flex-flow: column;
}

.avatar-info {
  background: #fac3b6;
  width: 100%;
  height: 290rpx;
  display: flex;
  flex-flow: column;
  align-items: center;
  justify-content: center;
}


.avatar-wrapper {
  display: flex;
  padding: 0;
  background: none;
  align-items: center;
}

.avatar {
  width: 152rpx;
  height: 152rpx;
  border-radius: 50%;
  background: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}

.name {
  font-size: 28rpx;
  margin-top: 22rpx;
  color: #fff;
}

.info {
  display: flex;
  flex-flow: column;
  background: #fff;
}

.info-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 22rpx 28rpx;
  border-bottom: 2rpx solid #ccc;
  font-size: 28rpx;
}

.input {
  text-align: center;
  width: 180rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.placeholder {
  font-size: 28rpx;
  color: #999;
}

.label {
  font-size: 28rpx;
}

.select {
  transform: scale(.9);
  margin-left: 22rpx;
}

.btn {
  background: #fff;
  margin: 60rpx 24rpx 0 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 22rpx 0rpx;
  border-radius: 8rpx;
  color: #fff;
  background: #fac3b6;
}

.tip {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #999;
}

.birthday {
  color: black;
}